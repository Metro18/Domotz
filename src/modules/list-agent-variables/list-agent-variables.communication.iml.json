{
	"url": "/agent/{{parameters.agent_id}}/variable",
	"method": "GET",
	"qs": {
		"page_size": "{{min(1000, parameters.limit)}}",
		"page_number": "{{pagination.page - 1}}",
		"value": "{{parameters.value}}",
		"path": "{{parameters.path}}",
		"sort_by": "{{parameters.sort_by}}",
		"sorting_direction": "{{parameters.sorting_direction}}",
		"has_history": "{{parameters.has_history}}",
		"metric": "{{parameters.metric}}"
	},
	"response": {
		"limit": "{{parameters.limit}}",
		"iterate": "{{body}}",
		"output": "{{item}}"
	},
	"pagination": {
		"qs": {
			"page_number": "{{pagination.page - 1}}"
		},
		"condition": "{{length(body) > 0}}"
	}
}
